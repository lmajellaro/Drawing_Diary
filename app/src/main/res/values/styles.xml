<resources>

    <!-- Base application theme. -->
<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="showcaseViewStyle">@style/CustomShowcaseTheme</item>
    </style>
    <style name="checkBoxStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/colorElementsTB</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/colorElementsTB</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/colorElementsTB</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/colorElementsTB</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/colorAccent</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>


    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
   <!--     <item name="sv_backgroundColor">@color/tutorial_background</item>-->
<!--        <item name="sv_buttonBackgroundColor">@color/colorPrimaryDark</item>-->
        <item name="sv_backgroundColor">#BF000000</item>
        <item name="sv_buttonBackgroundColor">#85241c</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_buttonText">Got It!</item>
        <item name="sv_detailTextAppearance">@style/ShowcaseCustomText</item>
<!--        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetailText</item>-->
    </style>

    <style name="ShowcaseCustomText" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textSize">20sp</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="Dialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@color/colorElementsTB</item>
    </style>

</resources>
